@page
@model FormularioVisitantes.Pages.VisitorRegisterModel
@{
}

<div class="w-full h-full grid grid-cols-2">
    <div class="h-full flex justify-center items-center beach-background">
    </div>

    <div class="bg-[#112A56] h-full flex justify-center items-center">
        <form id="visitorForm" method="post" class="bg-white/90 w-1/2 flex flex-col px-12 py-8 gap-4 border border-solid rounded-md">
            <div class="flex flex-col">
                <div class="flex flex-col gap-1">
                    <label for="Dui" class="font-semibold">DUI</label>
                    <input 
                        asp-for="Dui" 
                        value="@Model.Dui" 
                        inputmode="numeric" 
                        maxlength="9" 
                        oninput="this.value = this.value.replace(/[^0-9]/g, '')" 
                        class="border border-solid border-blue-700 px-2 py-1 rounded-md" 
                     />
                </div>

                <span asp-validation-for="Dui" class="text-red-500 font-semibold"></span>
            </div>

            <div class="flex flex-col">
                <div class="flex flex-col gap-1">
                    <label for="Nombre" class="font-semibold">Nombre</label>
                    <input 
                        asp-for="Name" 
                        value="@Model.Name"
                        class="border border-solid border-blue-700 px-2 py-1 rounded-md" 
                    />
                </div>

                <span asp-validation-for="Name" class="text-red-500 font-semibold"></span>
            </div>


            <div class="flex flex-col">
                <div class="flex flex-col gap-1">
                    <label for="Email" class="font-semibold">Email</label>
                    <input 
                        asp-for="Email" 
                        value="@Model.Email"
                        inputmode="email" 
                        class="border border-solid border-blue-700 px-2 py-1 rounded-md" 
                     />
                </div>

                <span asp-validation-for="Email" class="text-red-500 font-semibold"></span>
            </div>

            <div class="flex flex-col">
                <div class="flex flex-col gap-1">
                    <label for="FechaNacimiento" class="font-semibold">Fecha de Nacimiento</label>
                    <input 
                        asp-for="Birthday" 
                        value="@Model.Birthday"
                        type="date" 
                        class="border border-solid border-blue-700 px-2 py-1 rounded-md" 
                     />
                </div>

                <span asp-validation-for="Birthday" class="text-red-500 font-semibold"></span>
            </div>


            <div class="flex flex-col">
                <div class="flex flex-col gap-1">
                    <label for="Telefono" class="font-semibold">Teléfono</label>
                    <input 
                        asp-for="Phone" 
                        value="@Model.Phone"
                        inputmode="numeric" 
                        maxlength="8" 
                        oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                        class="border border-solid border-blue-700 px-2 py-1 rounded-md" 
                    />
                </div>

                <span asp-validation-for="Phone" class="text-red-500 font-semibold"></span>
            </div>


            <button type="submit" asp-page-handler="AddNewVisitor" class="bg-blue-700 hover:bg-blue-600 px-4 py-2 text-white font-bold rounded-md">Enviar</button>
        </form>
    </div>

    <!-- Modal -->
    @if (Model.ShowModal)
    {
        <div id="successModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50">
            <div class="bg-white p-6 rounded-lg shadow-lg text-center">
                <h2 class="text-lg font-bold text-green-600">¡Registro exitoso!</h2>
                <p>El visitante ha sido registrado correctamente.</p>
                <button onclick="closeModal()" class="mt-4 px-4 py-2 bg-blue-700 text-white rounded">Aceptar</button>
            </div>
        </div>

        <script>
            function closeModal() {
                document.getElementById("successModal").style.display = "none";
            }
        </script>
    }
</div>